{
  "manifest_version": 3,
  "name": "Save Website ",
  "short_name": "SaveWebsite",
  "version": "0.0.1",
  "description": "Save your websites with tags and revisit them quickly.",
  "action": {
    "default_title": "Save website",
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab", "contextMenus"],
  "content_scripts": [
    {
      "js": ["src/content.tsx"]
    }
  ],
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save the current tab with tags"
    }
  }
}
